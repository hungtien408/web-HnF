        <div class="btn1"><input type="submit" value="LƯU" /></div>
        <div class="btn2"><a href="@Url.Action("DeleteByID", "Customer", new { id = Model.CustomerID})">XÓA</a></div>
        <div class="btn3"><a href="@Url.Action("Index")">QUAY LẠI</a></div>
        <div class="btn4"><a href="@Url.Action("Index","Contract")">TẠO GIAO DỊCH</a></div>
        <div class="khachhang">KHÁCH HÀNG: NGUYỄN THỊ XUÂN DIỆU</div>
    </div>
}


